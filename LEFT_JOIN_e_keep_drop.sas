DATA DADOS;
INPUT ID NOME $ NUM;
DATALINES;
100 JONATHAN 10
200 CARLOS 15
300 ANA 30
500 PEDRO 50
700 ZELTA 70
;
RUN;

DATA PRODUTO;
INPUT ID NOMEPRODUTO $;
DATALINES;
100 GILETE
200 CARNE
300 PÃO


; 
RUN;

PROC SQL;
	CREATE TABLE UNIAO_LEFTJOIN AS SELECT	
		A.ID
		,A.NOME
		,B.NOMEPRODUTO
	FROM DADOS AS A LEFT JOIN
	PRODUTO AS B ON A.ID = B.ID
	;
QUIT;

DATA CONCATENA;
SET UNIAO_LEFTJOIN;
	FORMAT FLAG $30.;
	FORMAT FLAG2 $30.;
	FLAG = CATT(NOME, NOMEPRODUTO);
	FLAG2 = CATX('-', NOME, NOMEPRODUTO);
RUN;


%MACRO JUNTA(BASE);
    PROC SQL;
        CREATE TABLE JUNTANDO AS
        SELECT A.*, B.*
        FROM CONCATENA AS A
        LEFT JOIN &BASE AS B
        ON A.NOME = B.NOME;
    QUIT;
%MEND;

%JUNTA(DADOS);



